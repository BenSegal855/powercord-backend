{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "incremental": true,

    "noEmitOnError": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,

    "lib": [ "es2020" ],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "../dist/api"
  },
  "include": [
    "src/**/*",
    "src/api/docs/spoonfeed/src/markdown/**/*"
  ],
  "exclude": [
    "src/api/docs/spoonfeed/**/*",
  ]
}
