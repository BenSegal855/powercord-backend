{
  "name": "powercord-backend",
  "version": "2.0.0",
  "description": "The backend for Powercord",
  "repository": "git@github.com:powercord-org/powercord-backend.git",
  "author": "aetheryx",
  "license": "MIT",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">= 14",
    "pnpm": ">= 5.13"
  },
  "scripts": {
    "web:dev": "cross-env NODE_ENV=development webpack serve --config web/webpack.config.cjs",
    "web:build": "cross-env NODE_ENV=production webpack --config web/webpack.config.cjs",
    "api:dev": "tsc-watch --project api/tsconfig.json --onSuccess \"node dist/api/index.js\"",
    "api:build": "tsc --build api/tsconfig.json",
    "api:start": "cross-env NODE_ENV=production node dist/api/index.js",
    "bot:dev": "rm -rf dist/boat && tsc-watch --project boat/tsconfig.json --onSuccess \"node dist/boat/index.js\"",
    "bot:build": "rm -rf dist/boat && tsc --build boat/tsconfig.json",
    "bot:start": "cross-env NODE_ENV=production node dist/boat/index.js",
    "build": "rm -rf dist && pnpm run web:build && pnpm run api:build && pnpm run bot:build"
  },
  "dependencies": {
    "eris": "^0.15.0",
    "fastify": "^3.14.2",
    "fastify-auth": "^1.1.0",
    "fastify-cookie": "^5.3.0",
    "fastify-mongodb": "^2.0.1",
    "fastify-raw-body": "^3.1.0",
    "fastify-tokenize": "^1.3.1",
    "marked": "^2.0.3",
    "mongodb": "^3.6.6",
    "node-cron": "^3.0.0",
    "node-fetch": "^2.6.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/plugin-proposal-object-rest-spread": "^7.13.8",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "@types/marked": "^2.0.2",
    "@types/mongodb": "^3.6.12",
    "@types/node": "^14.14.41",
    "@types/node-cron": "^2.0.3",
    "@types/node-fetch": "^2.5.10",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-helmet": "^6.1.1",
    "@types/react-router": "^5.1.13",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "autoprefixer": "^10.2.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.2",
    "css-minimizer-webpack-plugin": "^2.0.0",
    "eslint": "^7.24.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-standard": "^4.1.0",
    "file-loader": "^6.2.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "image-webpack-loader": "^7.0.1",
    "mini-css-extract-plugin": "^1.4.1",
    "nodemon": "^2.0.7",
    "postcss-loader": "^5.2.0",
    "raw-loader": "^4.0.2",
    "react-refresh": "^0.10.0",
    "sass": "^1.32.10",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.4",
    "webpack": "^5.33.2",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-manifest-plugin": "^3.1.1",
    "webpack-node-externals": "^2.5.2"
  }
}
